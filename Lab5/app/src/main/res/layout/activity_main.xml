<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Botón para abrir el fragmento de la Catedral -->
    <Button
        android:id="@+id/btnCatedral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catedral de Arequipa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0077B6"
        android:textColor="#FFFFFF" />

    <!-- Botón para abrir el fragmento del Claustro -->
    <Button
        android:id="@+id/btnClaustro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claustro de la Compañía"
        app:layout_constraintTop_toBottomOf="@id/btnCatedral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0077B6"
        android:textColor="#FFFFFF" />

    <!-- Contenedor para los fragmentos -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnClaustro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
